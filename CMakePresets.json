{
    "version": 3,
    "configurePresets": [
        {
          "name": "core",
          "displayName": "Core",
          "description": "Core build for embedded systems",
          "binaryDir": "${sourceDir}/build",
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "MinSizeRel",
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/dist",
            "LibBGCode_BUILD_COMPONENT_Binarize": false,
            "LibBGCode_BUILD_COMPONENT_Binarize_Convert": false
          }
        },
        {
          "name": "default",
          "displayName": "Default",
          "description": "Default build for any desktop OS",
          "binaryDir": "${sourceDir}/build",
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/dist",
            "CMAKE_FIND_ROOT_PATH": {
                "type": "PATH",
                "value": "${sourceDir}/deps/build/destdir/usr/local"
            }
          }
        },
        {
            "name": "python-module",
            "displayName": "Python module",
            "description": "Default build for any desktop OS with Python bindings",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
              "CMAKE_BUILD_TYPE": "Release",
              "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/dist",
              "LibBGCode_BUILD_CMD_TOOL": false,
              "LibBGCode_BUILD_PYTHON_BINDING": true,
              "CMAKE_FIND_ROOT_PATH": {
                  "type": "PATH",
                  "value": "${sourceDir}/deps/build-python/destdir/usr/local"
              },
              "CMAKE_MODULE_PATH": {
                  "type": "PATH",
                  "value": "${sourceDir}/deps/build-python/destdir/usr/local/share/cmake/python_cmake_wheel"
              }
            }
        },
        {
            "name": "wasm",
            "displayName": "WebAssembly module",
            "description": "WebAssembly build which only works with emscripten compiler",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
              "CMAKE_BUILD_TYPE": "MinSizeRel",
              "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/dist",
              "LibBGCode_BUILD_CMD_TOOL": false,
              "CMAKE_FIND_ROOT_PATH": {
                  "type": "PATH",
                  "value": "${sourceDir}/deps/build-wasm/destdir/usr/local"
              }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "core",
            "configurePreset": "core"
        },
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "wasm",
            "configurePreset": "wasm"
        },
        {
          "name": "python-module",
          "configurePreset": "python-module"
        }
    ]
}