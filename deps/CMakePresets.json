{
    "version": 3,
    "configurePresets": [
        {
          "name": "default",
          "displayName": "Default Config",
          "description": "Default build for any desktop OS",
          "binaryDir": "${sourceDir}/build",
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "DEP_DOWNLOAD_DIR": {
                "type": "PATH",
                "value": "${sourceDir}/.pkg_cache"
            }
          }
        },
        {
          "name": "python-module",
          "inherits": "default",
          "displayName": "Python module dependencies",
          "description": "Python module dependencies",
          "binaryDir": "${sourceDir}/build-python",
          "cacheVariables": {
              "LibBGCode_Deps_SELECT_pybind11": {
                "type": "BOOL",
                "value": "TRUE"
              }
          }
        },
        {
            "name": "wasm",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build-wasm",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "LibBGCode_Deps_SELECT_ZLIB": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "jobs": 1,
            "configurePreset": "default"
        },
        {
            "name": "wasm",
            "inherits": "default",
            "configurePreset": "wasm"
        },
        {
          "name": "python-module",
          "inherits": "default",
          "configurePreset": "python-module"
        }
    ]
}